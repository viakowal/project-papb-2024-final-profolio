<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".edit.EditProfileActivity">

    <View
        android:id="@+id/bckgroundPrf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/bg_topbar">

    </View>

    <LinearLayout
        android:id="@+id/avatarPrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_circle_white"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEditImageProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ivProfile"
                android:layout_alignBottom="@+id/ivProfile"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:backgroundTint="@color/white"
                android:foreground="@drawable/ic_camera"
                android:foregroundGravity="center" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_avatar_profile"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarPrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/organisasiPrf"
            app:layout_constraintEnd_toStartOf="@id/kepanitiaanPrf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jumlahOrganisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Organisasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kepanitiaanPrf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jumlahKepanitiaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtKep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Kepanitiaan"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prestasiPrf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/kepanitiaanPrf"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jumlahPrestasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtPres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"

                android:text="Prestasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtProfileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="@color/subcaption"
                    android:paddingStart="10dp"
                    android:hint="Username"
                    android:textColorHint="@color/subcaption"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="First Name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:textColor="@color/subcaption"
                        android:hint="First Name"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Last Name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileLastName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"

                        android:textColor="@color/subcaption"
                        android:hint="Last Name"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:textColor="@color/subcaption"
                    android:paddingStart="10dp"
                    android:hint="+6281xxxxxxxxx"
                    android:textColorHint="@color/subcaption"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="@color/subcaption"
                    android:paddingStart="10dp"
                    android:hint="proteam@gmail.com"
                    android:textColorHint="@color/subcaption"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Senior High School"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileSMA"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Senior High School"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:textColor="@color/subcaption"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Period"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileSMAPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:textColor="@color/subcaption"
                        android:paddingStart="10dp"
                        android:hint="Period"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="University"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileUniversity"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:textColor="@color/subcaption"
                        android:paddingStart="10dp"
                        android:hint="Senior High School"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Period"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtProfileUniversityPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:textColor="@color/subcaption"
                        android:paddingStart="10dp"
                        android:hint="Period"
                        android:textColorHint="@color/subcaption"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Skill"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtProfileSkills"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textColor="@color/subcaption"
                    android:hint="Drawing"
                    android:textColorHint="@color/subcaption"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Self Description"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtProfileDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:textColor="@color/subcaption"
                    android:inputType="textCapSentences"
                    android:paddingStart="10dp"
                    android:hint="Description"
                    android:textColorHint="@color/subcaption"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="125dp"
                android:background="@drawable/round_back"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Save Changes"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
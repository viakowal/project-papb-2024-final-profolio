<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoardingSatuActivity"
    android:background="@drawable/on_boarding_1">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <LinearLayout
        android:id="@+id/onBoardingSatuCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Great People!"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="58dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="32dp"
            android:text="Let's showcase your talent and skills!"
            android:textAlignment="textStart"
            android:textColor="@color/subcaption"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="55dp"
            android:layout_gravity="right"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="41dp"
            android:background="@drawable/button_circle_bg"
            android:drawableTop="@drawable/ic_next"
            android:paddingHorizontal="11dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>